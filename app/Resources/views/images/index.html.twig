{% extends 'layout.html.twig' %}

{% block contenido %}
    <h2>Imágenes de galerías</h2>

        {% for image in images %}
            <div class="row">
                <div class="col s2 m3">
                    {{ image.id }}
                </div>
                <div class="col s2 m3">
                    {{ image.name }}
                </div>
                <div class="col s2 m3">
                    <img src="{{ asset('assets/images/galeries/') ~ image.image }}" alt="Imagen" height="50px" width="50px">
                </div>
                <div class="col s6 m3">
                    <a class="btn" href="{{ path('images_delete', {'id': image.id}) }}">Eliminar</a>
                </div>
            </div>
        {% endfor %}

