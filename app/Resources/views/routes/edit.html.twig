{% extends '::layout.html.twig' %}

{% block contenido %}
    <h2 class="center-align">Editar ruta</h2>

    {{ form_start(edit_form, { 'enctype':"multipart/form-data"}) }}
    <a class="btn right" href="{{ path('homepage') }}">Volver</a>

    <div class="hide">
        {{ form_widget(edit_form.owner) }}
        {{ form_label(edit_form.owner) }}
        {{ form_errors(edit_form.owner) }}
        {#{{ form_row(edit_form.owner) }}#}

    </div>
    <div class="hide">
        {{ form_widget(edit_form.createdDate) }}
        {{ form_label(edit_form.createdDate) }}
        {{ form_errors(edit_form.createdDate) }}
        {#{{ form_row(edit_form.createdDate) }}#}

    </div>
    <div class="hide">
        {{ form_widget(edit_form.updatedDate) }}
        {{ form_label(edit_form.updatedDate) }}
        {{ form_errors(edit_form.updatedDate) }}
        {#{{ form_row(edit_form.updatedDate) }}#}

    </div>

    <div class="hide">
        {{ form_widget(edit_form.date) }}
        {{ form_label(edit_form.date) }}
        {{ form_errors(edit_form.date) }}
        {#{{ form_row(edit_form.date) }}#}

    </div>
    {{ form_widget(edit_form) }}
    <p>Fecha de celebración actual: {{ route.date|date("d/m/Y") }}</p>
    <label for="date">Fecha de celebración</label>
    <input name="fecha" type="date" class="datepicker" required>
    <input class="btn" type="submit" value="Guardar"/>
    {{ form_end(edit_form) }}
    <p></p>
    {{ form_start(delete_form) }}

    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn" href="#modal1">Eliminar</a>

    <!-- Modal Structure -->
    <div id="modal1" class="modal">
        <div class="modal-content">
            <h4>Eliminar ruta</h4>
            <p>¿Estás seguro que quieres eliminar la ruta? Hay usuarios unidos a ella.</p>
        </div>
        <div class="modal-footer">
            <input class="modal-action modal-close waves-effect waves-green btn-flat" type="submit" value="Eliminar ruta">
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Cancelar</a>
        </div>
    </div>

    {{ form_end(delete_form) }}
    <p></p>

{% endblock %}
