{% extends '::layout.html.twig' %}

{% block contenido %}
    <h2>Lista de rutas</h2>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Ciudad</th>
            <th>Tipo</th>
            <th>Dificultad</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for route in routes %}
            <tr>
                <td><a href="{{ path('routes_show', { 'id': route.route.id }) }}">{{ route.route.id }}</a></td>
                <td>{{ route.route.name }}</td>
                <td>{{ route.route.date|date('d-m-Y') }}</td>
                <td>{{ route.route.city }}</td>
                <td>{{ route.route.type }}</td>
                <td>{{ route.route.dificult }}</td>
                <td>
                    <a class="btn" href="{{ path('routes_show', { 'id': route.route.id }) }}">Mostrar</a>
                    <a class="btn" href="{{ path('routes_edit', { 'id': route.route.id }) }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn" href="{{ path('routes_new') }}">Crear nueva ruta</a>
        </li>
    </ul>
{% endblock %}
