{% extends 'layout.html.twig' %}

{% block contenido %}
    <h2>Sites list</h2>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="{{ path('sites_show', { 'id': site.id }) }}">{{ site.id }}</a></td>
                <td>{{ site.name }}</td>
                <td>{{ site.description }}</td>
                <td>
                    <a class="btn" href="{{ path('sites_show', { 'id': site.id }) }}">Mostrar</a>
                    <p></p>
                    <a class="btn" href="{{ path('sites_edit', { 'id': site.id }) }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn" href="{{ path('sites_new') }}">Nuevo</a>
        </li>
    </ul>
{% endblock %}
