{% extends '::layout.html.twig' %}

{% block contenido %}
    <h2>Lista de usuarios</h2>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Username</th>
            <th>Mail</th>
            <th>Twitter</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('users_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.name }}</td>
                <td>{{ user.userName }}</td>
                <td>{{ user.mail }}</td>
                <td><a href="https://twitter.com/{{ user.redes }}" target="_blank">{{ user.redes }}</a></td>
                <td>
                    <a class="btn" href="{{ path('users_show', { 'id': user.id }) }}">Mostrar</a>
                    <a class="btn" href="{{ path('users_edit', { 'id': user.id }) }}">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn" href="{{ path('users_new') }}">Crear nuevo usuario</a>
        </li>
    </ul>
{% endblock %}
